<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>New article</title>

    <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
    crossorigin="anonymous"
  />
  <link rel="stylesheet" type="text/css" href="css/styles.css">
  </head>
  <body>
    <%- include("partials/navbar") %>
    <div class="container">
      <div class="row">
        <div class="col-12">
          <form action="/articulos" method="post" class="border p-3" enctype="multipart/form-data">
            <div class="mb-3">
              <label for="title" class="form-label">TÃ­tulo</label>
              <input type="text" name="title" id="title" class="form-control" />
            </div>
            <div class="mb-3">
              <label for="content" class="form-label">Contenido</label>
              <textarea type="text" name="content" id="content" class="form-control"></textarea>
            </div>
            <div class="mb-3">
              <label for="image" class="form-label">Imagen</label>
              <input type="file" name="image" id="image" class="form-control" />
            </div>
            <label for="authorId" class="form-label">Autor</label>
            <select name="authorId" id="authorId" class="form-label">
              <option value="">Selecciona un autor...</option>
              <% for(const author of authors){ %>
              <option value="<%=author.id%>"><%=author.firstname+" "+author.lastname%></option>
              <% } %>
            </select>
            <button type="submit" class="btn btn-outline-dark">Crear articulo</button>
          </form>
        </div>
      </div>
    </div>
    <%- include("partials/footer") %>
  </body>
</html>
